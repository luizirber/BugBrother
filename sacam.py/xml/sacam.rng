<?xml version="1.0" encoding="UTF-8"?>
<!-- SACAM project file. -->
<grammar ns="http://cnpdia.embrapa.br" xmlns="http://relaxng.org/ns/structure/1.0">
  <start>
    <ref name="project"/>
  </start>
  <define name="project">
    <element name="project">
      <ref name="attributes"/>
      <ref name="refimage"/>
      <ref name="bug_size"/>
      <ref name="bug_max_speed"/>
      <ref name="experiments"/>
    </element>
  </define>
  <define name="attributes">
    <element name="attributes">
      <zeroOrMore>
        <ref name="attrib"/>
      </zeroOrMore>
    </element>
  </define>
  <define name="attrib">
    <element name="attribute">
      <text/>
    </element>
  </define>
  <define name="refimage">
    <element name="refimage">
      <text/>
    </element>
  </define>
  <define name="bug_size">
    <element name="bug_size">
      <text/>
    </element>
  </define>
  <define name="bug_max_speed">
    <element name="bug_max_speed">
      <text/>
    </element>
  </define>
  <define name="experiments">
    <element name="experiments">
      <zeroOrMore>
        <ref name="experiment"/>
      </zeroOrMore>
    </element>
  </define>
  <define name="experiment">
    <element name="experiment">
      <ref name="attributes"/>
      <ref name="measurement_unit"/>
      <ref name="start_time"/>
      <ref name="end_time"/>
      <ref name="x_scale_ratio"/>
      <ref name="y_scale_ratio"/>
      <ref name="threshold"/>
      <ref name="release_area"/>
      <ref name="points"/>
      <ref name="areas"/>
    </element>
  </define>
  <define name="measurement_unit">
    <element name="measurement_unit">
      <text/>
    </element>
  </define>
  <define name="start_time">
    <element name="start_time">
      <text/>
    </element>
  </define>
  <define name="end_time">
    <element name="end_time">
      <text/>
    </element>
  </define>
  <define name="x_scale_ratio">
    <element name="x_scale_ratio">
      <text/>
    </element>
  </define>
  <define name="y_scale_ratio">
    <element name="y_scale_ratio">
      <text/>
    </element>
  </define>
  <define name="threshold">
    <element name="threshold">
      <text/>
    </element>
  </define>
  <define name="release_area">
    <element name="release_area">
      <text/>
    </element>
  </define>
  <!-- TODO: Need to verify this -->
  <define name="points">
    <element name="points">
      <zeroOrMore>
        <ref name="point"/>
      </zeroOrMore>
    </element>
  </define>
  <define name="areas">
    <element name="areas">
      <zeroOrMore>
        <ref name="area"/>
      </zeroOrMore>
    </element>
  </define>
  <define name="point">
    <element name="point">
      <ref name="pos_x"/>
      <ref name="pos_y"/>
      <ref name="start_time"/>
      <ref name="end_time"/>
    </element>
  </define>
  <define name="pos_x">
    <element name="pos_x">
      <text/>
    </element>
  </define>
  <define name="pos_y">
    <element name="pos_y">
      <text/>
    </element>
  </define>
  <define name="area">
    <element name="area">
      <ref name="shape"/>
      <ref name="name"/>
      <ref name="description"/>
      <ref name="number_of_tracks"/>
      <ref name="residence"/>
      <ref name="residence_percentage"/>
      <ref name="total_lenght"/>
      <ref name="tracks"/>
    </element>
  </define>
  <define name="name">
    <element name="name">
      <text/>
    </element>
  </define>
  <define name="shape">
    <choice>
      <ref name="ellipse"/>
      <ref name="rectangle"/>
      <ref name="freeform"/>
    </choice>
  </define>
  <define name="description">
    <element name="description">
      <text/>
    </element>
  </define>
  <define name="number_of_tracks">
    <element name="number_of_tracks">
      <text/>
    </element>
  </define>
  <define name="residence">
    <element name="residence">
      <text/>
    </element>
  </define>
  <define name="residence_percentage">
    <element name="residence_percentage">
      <text/>
    </element>
  </define>
  <define name="total_lenght">
    <element name="total_lenght">
      <text/>
    </element>
  </define>
  <!-- TODO: implement these -->
  <define name="ellipse">
    <element name="ellipse">
      <text/>
    </element>
  </define>
  <define name="rectangle">
    <element name="rectangle">
      <text/>
    </element>
  </define>
  <define name="freeform">
    <element name="freeform">
      <text/>
    </element>
  </define>
  <define name="tracks">
    <zeroOrMore>
      <ref name="track"/>
    </zeroOrMore>
  </define>
  <define name="track">
    <interleave>
      <ref name="residence"/>
      <ref name="tortuosity"/>
      <ref name="total_lenght"/>
      <ref name="average_speed"/>
      <ref name="standard_deviation"/>
      <ref name="angular_standard_deviation"/>
      <ref name="direction_changes"/>
      <ref name="points"/>
    </interleave>
  </define>
  <define name="tortuosity">
    <element name="tortuosity">
      <text/>
    </element>
  </define>
  <define name="average_speed">
    <element name="average_speed">
      <text/>
    </element>
  </define>
  <define name="standard_deviation">
    <element name="standard_deviation">
      <text/>
    </element>
  </define>
  <define name="angular_standard_deviation">
    <element name="angular_standard_deviation">
      <text/>
    </element>
  </define>
  <define name="direction_changes">
    <element name="direction_changes">
      <text/>
    </element>
  </define>
</grammar>
